  let date_event = document.getElementById("date_event").value.trim();

  let nameError = document.getElementById("nameError");
  let DescError = document.getElementById("DescError");
  let DureeError = document.getElementById("DureeError");
  let date_eventError = document.getElementById("date_eventError");

  // Reset error messages
  nameError.innerHTML = "";
  DescError.innerHTML = "";
  DureeError.innerHTML = "";
  date_eventError.innerHTML = "";

  let isValid = true;

  // Validate name
  if (name == "") {
    nameError.innerHTML = "Name is required";
    isValid = false;
  }

  // Validate description
  if (desc == "") {
    DescError.innerHTML = "Description is required";
    isValid = false;
  } 
  // Validate date_event
  if (date_event == "") {
    date_eventError.innerHTML = "date_event is required";
    isValid = false;
  } 

  // Validate duration
  if (Duree == "") {
    DureeError.innerHTML = "Duration is required";
    isValid = false;
  } else if (Duree < 1) {
    DureeError.innerHTML = "Duration must be at least 1 hour";
    isValid = false;
  }

  return isValid;
}

